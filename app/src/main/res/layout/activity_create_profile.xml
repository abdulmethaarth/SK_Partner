            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/mobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:textColorHint="@color/dark_gray"
                android:inputType="number"
                />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/font_10"
                android:id="@+id/edit_dob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:hint="Dob"
                android:textColor="@color/black"
                android:gravity="left|center"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/font_16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"></View>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/pan_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PAN Account number"
                android:inputType="textVisiblePassword"
                android:imeOptions="actionUnspecified"
                android:textColorHint="@color/dark_gray"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/height_15"
                    android:id="@+id/license_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Driving Licence number"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionUnspecified"
                    android:textColorHint="@color/dark_gray"
                    />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/font_10"
                    android:id="@+id/issue_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="Issue Date"
                    android:textColor="@color/black"
                    android:gravity="left|center"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="@dimen/font_16" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"></View>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/font_10"
                    android:id="@+id/exp_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="Expiry Date"
                    android:textColor="@color/black"
                    android:gravity="left|center"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="@dimen/font_16" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"></View>
                </LinearLayout>
            </LinearLayout>

